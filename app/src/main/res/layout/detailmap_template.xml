<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="20dp">
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="195dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp"
        app:contentPadding="0dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/deM_p"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="จังหวัด"
                    android:textColor="@color/navy"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/deM_province"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="69dp"
                    android:layout_alignParentTop="true"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="สระบุรี"
                    android:textColor="@color/navy"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/deM_d"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/deM_province"
                    android:layout_marginTop="2dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="อำเภอ"
                    android:textColor="@color/navy"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/deM_dis"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/deM_province"
                    android:layout_marginStart="58dp"
                    android:layout_marginTop="2dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="พระพุทธบาท"
                    android:textColor="@color/navy"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/deM_"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/deM_province"
                    android:layout_marginTop="19dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="................................................................."
                    android:textColor="@color/black"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/deM_dd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/deM_"
                    android:layout_marginTop="2dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="วันที่ : "
                    android:textColor="@color/navy"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/deM_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/deM_"
                    android:layout_marginStart="55dp"
                    android:layout_marginTop="2dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="15 มีนาคม 2565"
                    android:textColor="@color/navy"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/deM_pre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/deM_"
                    android:layout_marginTop="32dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="สถานะ : "
                    android:textColor="@color/navy"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/deM_predict"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/deM_"
                    android:layout_marginTop="32dp"
                    android:layout_marginStart="67dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="ไม่ท่วม"
                    android:textColor="@color/navy"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/deM_r"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/deM_predict"
                    android:layout_marginTop="5dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="ปริมาณน้ำฝน : "
                    android:textColor="@color/navy"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/deM_rain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/deM_predict"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="120dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="20"
                    android:textColor="@color/navy"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/deM_mm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/deM_predict"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="150dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="mm"
                    android:textColor="@color/navy"
                    android:textSize="18sp" />

            </RelativeLayout>
        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>

</LinearLayout>